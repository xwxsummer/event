    display: inline-block;
    margin-bottom: 0px;
    padding: 0;
    -webkit-user-select: text;
    border:none;
    border-bottom: 1px solid #e5e5e5;
    border-radius: 0px;
    font-size: 15px;
    box-sizing: border-box;
}
