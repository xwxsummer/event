.mui-segmented-control.mui-scroll-wrapper{
  height: 160px;
}
.mui-scroll-wrapper .mui-scroll{
  height: 42px;
  font-size: 15px;
  color: #333;
  background-color: #fff;
}
.mui-segmented-control .mui-control-item{
  line-height: 30px;
  border-right: 2px solid #ccc; 
}
.mui-segmented-control .mui-control-item:last-child{
  border-right:none;
}
.mui-segmented-control-inverted .mui-control-item.mui-active{
  color: #ea5529;
  border-bottom: 2px solid #ea5529;
}
.neirong {
  margin-top: 42px;
}
.mui-scroll-wrapper .mui-scroll{
  width: 100%;
}

.box3_top img{
    width:50px;
    height:50px;
    border-radius: 50%;
    margin-left: 30px;
    margin-top:15px;
}
.box3_top span{
    margin-left: 20px;
    line-height: 50px;
    color: #000000;
    font-weight: 800;
}
.box3_top .button{
    width: 27%;
    height: 1.5rem;
    background: url("/assets/images/yi.png")no-repeat;
    background-size: 5rem;
    border-radius: 20px;
    color: #ffffff;
    margin-left: 10px;
    display: inline-block;
}

.box3 .right{
    color: #000;
    float: right;
    width: 49%;
    height: 1.8rem;
    margin-top: 1.8rem;
    border-left: 1px solid #ccc;
}
.right img{
    float: right;
}
.right span{
line-height: 2rem;
}
.bottom{
    width: 87%;
    height: 4rem;
    margin: 0 auto
}
.bottom span{
    line-height: 4rem;
}
.right span{
    display: block;

    width: 98%;
    height: 2rem;
    float: right;
}
.right span img{
    margin-top: 10px;
    margin-left: 10px;
}
.Success{
  width: 70%;
  height: 3rem;
  line-height: 3rem;
  border-radius: 5px;
  margin: 0 auto;
}
.m30{
  margin-top: 30px;
}
.mui-table-view {
    margin: 0;
    text-align: center;
    color: #999;
    border-radius: 0px;
}
.cancel_li{
    border: 1px solid #000;
    border-radius: 5px;
    width: 20%;
    display: inline-block;
    margin-bottom: 10px;
    height: 2rem;
    line-height: 2rem;
    margin-left: 10px;
    margin-right: 10px;
    color: #333333;
    padding:0;
}
.neirong > div:first-child{
 display: block;
}
.neirong > div {

  width: 100%;
  height: 150px;
  border-width: 0 1px 1px 1px;
  display: none; 
}

.speak {
