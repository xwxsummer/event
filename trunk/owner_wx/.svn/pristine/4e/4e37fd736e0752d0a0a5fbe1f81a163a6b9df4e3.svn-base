.height36{
  height: 3rem;
  line-height: 3rem;
  
}
.box{
    background: #efeff4;
    margin-bottom: 20px;
}
.box .box2{
    height: 13rem;
    margin-bottom: 10px;
    background: #fff;
    border-bottom: 1px solid #CCCCCC;
}
.box .box2 .box3{
    width: 87%;
    height: 9rem;
    overflow: hidden;
    margin: 0 auto;
}
.box3 .box3_top{
    height: 3.2rem;
    margin-top: 10px;
}
.box3 .box3_top .a{
    margin-top: 5px;
    display: block;
    width: 40px;
    height: 40px;
    border-radius: 40px;
    float: left;
}
.headImg{
    width:50px;
    height: 50px;
    border-radius: 50%;
}
.box3 .box3_top span{
   margin-left: 10px;
    line-height: 50px;
    float: left;
    color: #000000;
    font-weight: 800;
}
.box3_top .button{
    width: 27%;
    height: 1.5rem;
    background: url("/assets/images/yi.png")no-repeat;
    background-size: 5rem;
    float: left;
    border-radius: 20px;
    color: #ffffff;
    margin-top: 14px;
    margin-left: 10px;
    text-align: center;
    padding: 0;
}
.box3_top .bu{
    float: right;
    font-size: 18px;
    color: #ea5529;
    line-height: 50px;
}
.box3 .left{

    width: 49%;
    height: 6rem;

    float: left;
}
.box3 .left span{
    display: block;

}
.box3 .left span:nth-child(1){
    margin-top: 17px;
}
.box3 .left span:nth-child(4){
    margin-top: 30px;
}
.box3 .right{
    color: #000;
    float: right;
    width: 49%;
    height: 1.8rem;


    margin-top: 1.8rem;
    border-left: 1px solid #ccc;
}
.right img{
    float: right;
}
.right span{
line-height: 2rem;
}
.bottom{
    width: 87%;
    height: 4rem;
    margin: 0 auto
}
.bottom span{
    line-height: 4rem;
}
.right span{
    display: block;

    width: 98%;
    height: 2rem;
    float: right;
}
.right span img{
    margin-top: 10px;
    margin-left: 10px;
}
.buttons {
  width: 20%;
  border: 1px solid #4bbcbd ;
  border-radius: 10px;
  float: right;
  margin-bottom: 0px;
  color: #4bbcbd;
  height: 1.5rem;
  margin-top: 1.5rem;
  line-height: 1.5rem;
  margin-left: 10px;
  padding:0;
}
.moreInfo{
  margin-bottom: 3rem;
}
.moreInfo img {
  width: 20px;
  vertical-align: middle;
}