.box{
    background: #efeff4;
}
.box2{
    background: #ffffff;

    height: 11.7rem;
    margin: 0 auto;
    border-bottom: 1px solid #CCCCCC;
    margin-bottom: 5px;
}
.box3_top{
    height: 2.7rem;
    border-bottom: 1px solid #CCCCCC;
}
.box3_top span{
    line-height: 2.7rem;
}
.box3_top span:nth-child(1){
    color: #000;
    padding-left: 10px;
}
.box3_top span:nth-child(2){
    float: right;
    padding-right: 10px;
}

ul li{
    margin: 0 auto;
    width: 90%;
    height: 3.6rem;
    background: #ffffff;
    color: #000;
    line-height: 3.6rem;
    border-bottom: 1px solid #CCCCCC;
}

