
.mui-segmented-control.mui-scroll-wrapper{
  height: 52px;
}
.mui-segmented-control.mui-scroll-wrapper .mui-scroll{
  height: 52px;
  border-bottom: 1px solid #ccc;
  font-size: 15px;
  color: #333;
  background-color: #fff;
}
.mui-segmented-control .mui-control-item{
  line-height: 49px;
}
.mui-segmented-control.mui-segmented-control-inverted .mui-control-item.mui-active{
  color: #ea5529;
  border-bottom: 2px solid #ea5529;
}

.mui-segmented-control.mui-scroll-wrapper .mui-scroll{
  width: 100%;
}

.mui-segmented-control.mui-scroll-wrapper .mui-control-item{
  padding:0px 15px;
}

.Lists{
  box-sizing: border-box;
  margin-top: 10px;
}
.touxiang{
  width: 2rem;
  vertical-align: middle;
}
.height36{
  height: 3rem;
  line-height: 3rem;
}
.perTopSpan{
  margin-top: 5px;
  padding: 2px 10px 2px 0px;
  background-color: #333;
  opacity: .5;
  border-radius: 10px;

}
.perTopSpan img {
  width: 15px;
  vertical-align: middle;
  margin-bottom: 3px;
}
.dis_flex{
  display: flex;
}
.dis_flex ul{
  flex: 9;
}
.dis_flex ul li{
  width: 50%;
  line-height: 1.5rem;
}
.padding17{
  padding-left: 1.7rem;
  padding-right: 1.7rem;
}
.dis_flex>div{
  flex: 1;
  padding-top: 30px;
  box-sizing: border-box;
}
.dis_flex>div>span{
  font-size: 2rem;
}
.font12{
  font-size: 12px;
}

.jiedanshu_bottom{
  height: 2.6rem;
  line-height: 2.6rem;
}

.jiedanshu_contact{
  height: 1.6rem;
  line-height: 1.6rem;
  border: 1px solid #4bbcbd;
  color: #4bbcbd;
  border-radius: 10px;
  width: 4.7rem;
  margin-top: 0.5rem;
  margin-left: 5px;
}

.moreInfo{
  margin-bottom: 2rem;
  margin-top: 1rem;
}
.moreInfo img {
  width: 20px;
  vertical-align: middle;
}