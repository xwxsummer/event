.textarea{
    width: 90%;
    margin: 10px auto;
    border: 0;
    display: block;
    height: 8rem;
    background: #ebebeb;
}
.img{
    width: 90%;
    height: 3rem;
    margin: 0 auto;
    background: #ebebeb url("../../../assets/images/Camera.png") no-repeat 10px;
    background-size:2rem ;

}
.img span{
    line-height: 3rem;
    text-align: center;
    display: block;
}
.buttom{
    background: #ea5529;
    width: 80%;
    height: 2rem;
    display: block;
    color: #fff;
    border-radius: 5px;
    margin: 10px auto;
    position: fixed;
    bottom: 0px;
    left: 10%;
}

.box{
    background: #ccc;
    float: left;
    width: 100%;
    height: 30rem;
}

input[type=file]{
    visibility: hidden;
}


a,input{
    outline: none;
    -webkit-tap-highlight-color:rgba(0,0,0,0);
}
#choose{
    display: none;
}
canvas{
    width: 100%;
    border: 1px solid #000000;
}
#upload{
    display: block;
    margin: 10px;
    height: 3rem;
    text-align: center;
    line-height: 3rem;
    border: 1px solid;
    border-radius: 5px;
    margin: 0 auto;
}
.touch{
    background-color: #ddd;
}
.img-list{
    margin:0 auto;
    width:90%;
}
.img-list li{
    position: relative;
    display: inline-block;
    width: 30%;
    height: 4rem;
    margin-right: 0.7rem;
    margin-bottom: 0.5rem;
    border: 1px solid rgb(100,149,198);
    background: #fff no-repeat center;
    background-size: cover;
}
.img-list li:nth-child(1){
    margin-left: 0.3rem;
}
.img-list li:nth-child(3){
    margin-right: 0px;
}
.img-list li:nth-child(4){
    margin-left: 0.3rem;
}
.img-list li:nth-child(6){
    margin-right: 0px;
}
.progress{
    position: absolute;
    width: 100%;
    height: 20px;
    line-height: 20px;
    bottom: 0;
    left: 0;
    background-color:rgba(100,149,198,.5);
}
.progress span{
    display: block;
    width: 0;
    height: 100%;
    background-color:rgb(100,149,198);
    text-align: center;
    color: #FFF;
    font-size: 13px;
}
.size{
    position: absolute;
    width: 100%;
    height: 15px;
    line-height: 15px;
    bottom: -18px;
    text-align: center;
    font-size: 13px;
    color: #666;
}
.box .button{
    width: 50%;
    height: 2rem;
    margin: 0 auto;
    background: #ea5529;
    border-radius: 5px;
    text-align: center;
    line-height: 2rem;
    color: #fff;
}
