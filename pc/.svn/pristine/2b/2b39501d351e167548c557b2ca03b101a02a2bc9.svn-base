.box{
  height: 100%;
  width: 100%;
}
.box .box2{
  height: 70px;
  border-bottom: 1px solid #cccccc
}
.box2 span{
  color: #e85529;
  padding-left: 20px;
  line-height: 70px;
  cursor: pointer;
}
.map ul{
  height: 8rem;
  margin-left: 1rem;
}
.map ul li{
  float: left;
}
.map ul li a{
  color:#e85529;
}
.map ul li input{
  margin-top: 10px;
  margin-right: 15px;
  display:inline-block;
  width: 50%;
  height: 2.3rem;
  border: 1px solid #cccccc;
  border-radius: 5px;
  background: #ffffff;
}
.map ul li select{
  margin-top: 10px;
  margin-right: 15px;
  display:inline-block;
  width: 50%;
  height: 2.3rem;
  border: 1px solid #cccccc;
  border-radius: 5px;
}
 
