a{
text-decoration:none;
}
.box{
    background: #e7e8eb;
    height: 99%;
     /* overflow: hidden;  */
}
.box .title{
    height: 30px;
    background: #3d474a;
}
.box .title .name{
    float: right;
    line-height: 30px;
    color: #ffffff;
    padding-right: 2rem;
    font-size: 1rem;
}
.box .title .name span:nth-child(3){
    cursor: pointer;
}
.box .header{
    height: 70px;
    background: #ffffff url("../../assets/images/b.png") no-repeat 2rem center;
    background-size: 4rem;
    border-bottom: 1px solid #cccccc;
    /* overflow: hidden; */
}
.box .header .ul{
    width: 80%;
    height: 70px;
    float: left;
}
.box .header .ul li{
    float: left;
    width: 15%;
    height: 70px;
    /*background: #cccccc;*/
    line-height: 70px;
    text-align: center;
    color: #000000;
    font-size: 1.5rem;
    /*cursor: pointer;*/
    outline: none;
}
.box .header .ul li:active{
   border-bottom: 5px solid #eb5529;
}
.box .header .ul li:hover{
    border-bottom: 5px solid #999999;
}
.box .header span{
    display: block;
}
.box .header .span{
    /*display: block;*/
    float: left;
    height: 70px;
    width: 20%;
    padding-left: 6.5rem;
    color: #e85529;
    font-weight: 600;
}
.box .header span:nth-child(1){
    margin-top: 2rem;
    font-size: 1.2rem;
}
.box .header span:nth-child(2){

    font-size: 0.75rem;
}
.box .content{
    background: #ffffff;
    width: 98%;
    height: 99%;
    margin: 40px auto;
    border-top: 1px solid #cccccc;
    border-right: 1px solid #cccccc;
}
.footer{
    z-index: 1;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    color: #999999;
    font-size: 0.75rem;
    background: #e7e8eb;
}
